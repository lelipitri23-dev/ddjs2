<!DOCTYPE html>
<html lang="id">
<%- include('layout_head') %>
<body class="flex flex-col min-h-screen">
    
    <%- include('navbar') %>

    <main class="flex-grow container mx-auto px-4 py-8">
        <h2 class="text-xl font-bold mb-6 border-l-4 border-blue-500 pl-3 text-white">Update Terbaru</h2>

        <% if (mangas.length > 0) { %>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-4 gap-4 mb-8">
                <% mangas.forEach(manga => { %>
                    <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:-translate-y-1 hover:shadow-2xl transition duration-300 group">
                        <a href="/manga/<%= manga.slug %>" class="block h-full">
                            <div class="h-64 bg-gray-700 relative overflow-hidden">
                                <% if (manga.thumb) { %>
                                    <img src="<%= manga.thumb %>" alt="<%= manga.title %>" 
                                         class="w-full h-full object-cover group-hover:scale-105 transition duration-500" loading="lazy">
                                <% } else { %>
                                    <div class="w-full h-full flex items-center justify-center text-4xl">üìö</div>
                                <% } %>

                                <div class="absolute bottom-0 w-full bg-gradient-to-t from-black via-black/70 to-transparent p-2 pt-6">
                                    <span class="text-xs text-blue-300 font-semibold block uppercase tracking-wider">
                                        <%= manga.metadata.type ? (typeof manga.metadata.type === 'object' ? manga.metadata.type.type : manga.metadata.type) : 'Komik' %>
                                    </span>
                                </div>
                            </div>
                            <div class="p-3">
                                <h3 class="text-sm font-semibold text-white line-clamp-2 mb-2 group-hover:text-blue-400 transition"><%= manga.title %></h3>
                                <div class="flex justify-between items-center text-xs text-gray-400 border-t border-gray-700 pt-2">
                                    <span class="flex items-center gap-1">‚≠ê <%= manga.metadata.rating %></span>
                                    <span class="bg-gray-700 px-2 py-0.5 rounded text-[10px]"><%= manga.metadata.status %></span>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>

            <% if (totalPages > 1) { %>
                <div class="flex justify-center items-center gap-2 mt-10">
                    <% if (currentPage > 1) { %>
                        <a href="/?page=<%= currentPage - 1 %>" class="bg-gray-800 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition border border-gray-700">
                            &laquo; Prev
                        </a>
                    <% } %>

                    <span class="text-gray-400 text-sm px-2">
                        Halaman <span class="text-white font-bold"><%= currentPage %></span> dari <%= totalPages %>
                    </span>

                    <% if (currentPage < totalPages) { %>
                        <a href="/?page=<%= currentPage + 1 %>" class="bg-gray-800 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition border border-gray-700">
                            Next &raquo;
                        </a>
                    <% } %>
                </div>
            <% } %>
            <% } else { %>
            <div class="text-center py-20 text-gray-500">Belum ada komik.</div>
        <% } %>
    </main>

    <%- include('footer') %>
</body>
</html>
