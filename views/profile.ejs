<!DOCTYPE html>
<html lang="id">
<%- include('layout_head') %>
<body class="flex flex-col min-h-screen bg-gray-900 text-gray-200">

  <%- include('navbar') %>

  <main class="flex-grow container mx-auto px-4 py-8 max-w-5xl">

    <div class="bg-gray-800 rounded-xl p-6 mb-8 flex flex-col md:flex-row items-center gap-6 shadow-lg border border-gray-700 relative overflow-hidden">
      <div class="absolute top-0 left-0 w-full h-24 bg-gradient-to-r from-blue-900 to-purple-900 opacity-50"></div>

      <div class="relative z-10 mt-4 md:mt-0">
        <img id="profile-avatar" src="https://ui-avatars.com/api/?name=Guest&background=random"
        class="w-24 h-24 rounded-full border-4 border-gray-800 shadow-xl object-cover">
      </div>

      <div class="flex-1 text-center md:text-left z-10 mt-2 md:mt-8">
        <h1 id="profile-name" class="text-2xl font-bold text-white">Memuat...</h1>
        <p id="profile-email" class="text-gray-400 text-sm mb-4">
          ...
        </p>

        <div class="flex flex-wrap gap-3 justify-center md:justify-start">
          <button id="profile-login-btn" onclick="window.doGoogleLogin()" class="hidden bg-blue-600 hover:bg-blue-500 text-white px-6 py-2 rounded-full font-bold transition shadow-lg flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.033,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z" /></svg>
            Login dengan Google
          </button>
          <button id="profile-logout-btn" onclick="window.doLogout()" class="hidden bg-red-600 hover:bg-red-500 text-white px-6 py-2 rounded-full font-bold transition shadow-lg border border-red-500">
            Keluar
          </button>
        </div>
      </div>
    </div>

    <div class="mb-6 flex items-center justify-between border-b border-gray-700 pb-2">
      <h2 class="text-xl font-bold text-white border-l-4 border-blue-500 pl-3">
        Bookmark Saya
      </h2>
      <span class="text-xs text-gray-500">Disimpan di Browser</span>
    </div>

    <div id="bookmark-container" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4"></div>

    <div id="empty-state" class="hidden text-center py-20 bg-gray-800/30 rounded-xl border border-dashed border-gray-700">
      <div class="text-5xl mb-4 opacity-50">
        ðŸ“‚
      </div>
      <p class="text-gray-400">
        Belum ada komik yang di-bookmark.
      </p>
      <a href="/manga-list" class="text-blue-400 hover:text-white mt-2 inline-block font-medium">Jelajahi Komik &rarr;</a>
    </div>

  </main>

  <%- include('footer') %>

  <script>
    const container = document.getElementById('bookmark-container');
    const emptyState = document.getElementById('empty-state');
    const STORAGE_KEY = 'doujin_bookmarks';

    // Fungsi Render HTML Kartu Komik
    function generateCards(bookmarks) {
      if (!bookmarks || bookmarks.length === 0) {
        container.innerHTML = '';
        emptyState.classList.remove('hidden');
        return;
      }

      emptyState.classList.add('hidden');
      container.innerHTML = bookmarks.map(manga => `
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:-translate-y-1 transition group relative border border-gray-700">
        <button onclick="removeBookmark('${manga.slug}')" class="absolute top-1 right-1 bg-red-600/90 text-white p-1.5 rounded-full z-20 hover:bg-red-500 shadow-lg backdrop-blur-sm" title="Hapus">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>

        <a href="/manga/${manga.slug}">
        <div class="h-44 bg-gray-700 relative overflow-hidden">
        <img src="${manga.thumb}" class="w-full h-full object-cover group-hover:scale-105 transition duration-500" loading="lazy">
        </div>
        <div class="p-3">
        <h3 class="text-xs md:text-sm font-semibold text-white line-clamp-2 leading-snug">${manga.title}</h3>
        </div>
        </a>
        </div>
        `).join('');
    }

    // Fungsi Utama: Load Data
    async function loadBookmarks() {
      container.innerHTML = '<p class="text-gray-500 col-span-full text-center">Memuat data...</p>';

      const user = window.auth?.currentUser;

      if (user) {
        // --- LOAD DARI FIRESTORE ---
        console.log("Loading from Firestore...");
        const bookmarks = await window.getBookmarksFirestore();
        generateCards(bookmarks);
      } else {
        // --- LOAD DARI LOCALSTORAGE ---
        console.log("Loading from LocalStorage...");
        const bookmarks = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
        generateCards(bookmarks);
      }
    }

    // Fungsi Hapus (Global)
    window.removeBookmark = async (slug) => {
      if (!confirm('Hapus dari bookmark?')) return;

      const user = window.auth?.currentUser;

      if (user) {
        // Hapus dari Firestore
        const bookmarks = await window.getBookmarksFirestore();
        const item = bookmarks.find(b => b.slug === slug);
        if (item) {
          await window.removeBookmarkFirestore(item);
          loadBookmarks(); // Reload list
        }
      } else {
        // Hapus dari LocalStorage
        let bookmarks = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
        bookmarks = bookmarks.filter(b => b.slug !== slug);
        localStorage.setItem(STORAGE_KEY, JSON.stringify(bookmarks));
        loadBookmarks();
      }
    };

    // Event Listener: Tunggu Auth Status
    window.addEventListener('user_ready', () => loadBookmarks()); // Login
    window.addEventListener('user_guest', () => loadBookmarks()); // Tidak Login

    // Fallback jika event sudah lewat
    setTimeout(loadBookmarks, 1500);
  </script>

</body>
</html>