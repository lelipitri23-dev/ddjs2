<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <meta name="googlebot" content="index, follow" />
   <!-- Judul dan deskripsi dinamis -->  
    <title><%= title %></title>
    <meta name="keywords" content="komik dewasa, manhwa 18, manga, webtoon, bahasa indonesia, sekaikomik, baca komik gratis">
    <meta name="description" content="<%= desc %>">
    <meta name="robots" content="index, follow, max-image-preview:large">
    <meta name="application-name" content="<%= typeof siteName !== 'undefined' ? siteName : 'DoujinShi' %>" />
    <meta name="theme-color" content="#111827" />
    <% if (typeof canonicalUrl !== 'undefined' && canonicalUrl) { %>
    <link rel="canonical" href="<%= canonicalUrl %>" />
<% } else { %>
    <link rel="canonical" href="<%= siteUrl %><%= currentUrl %>" />
<% } %>
    <link rel="amphtml" href="https://sekaikomikapk.web.app/"/>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="mobile-web-app-capable" content="yes">

    <% 
       let metaImage;
       if (typeof image !== 'undefined' && image) {
           // Jika ada gambar spesifik (dari detail manga), pakai itu
           metaImage = image;
       } else {
           // Jika tidak ada, pakai logo default website
           metaImage = (typeof siteUrl !== 'undefined' ? siteUrl : '') + '/favicon.webp';
       }
    %>
    <!-- Open Graph dan Twitter Card -->
    <meta property="og:locale" content="id_ID" />
    <meta property="og:type" content="<%= typeof ogType !== 'undefined' ? ogType : 'website' %>" />
    <meta property="og:url" content="<%= typeof siteUrl !== 'undefined' ? siteUrl : '' %><%= typeof currentUrl !== 'undefined' ? currentUrl : '' %>" />
    <meta property="og:title" content="<%= title %>" />
    <meta property="og:description" content="<%= desc %>">
    <meta property="og:site_name" content="<%= typeof siteName !== 'undefined' ? siteName : 'DoujinShi' %>" />
    
    <meta itemprop="image" content="<%= metaImage %>" />
    <meta property="og:image" content="<%= metaImage %>" />
    <meta property="og:image:alt" content="<%= title %>" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="<%= typeof siteUrl !== 'undefined' ? siteUrl : '' %><%= typeof currentUrl !== 'undefined' ? currentUrl : '' %>">
    <meta name="twitter:title" content="<%= title %>" />
    <meta name="twitter:description" content="<%= desc %>">
    <meta name="twitter:image" content="<%= metaImage %>" />
    <meta name="twitter:image:alt" content="<%= title %>" />

    <link rel="icon" href="<%= siteUrl %>/favicon.webp" sizes="32x32" />
    <link rel="icon" type="image/png" sizes="16x16" href="<%= siteUrl %>/favicon.webp">
    <link rel="icon" href="<%= siteUrl %>/favicon.webp" sizes="192x192" />
    <link rel="apple-touch-icon" href="<%= siteUrl %>/favicon.webp" />
    <meta name="msapplication-TileImage" content="<%= siteUrl %>/favicon.webp" />
    <link rel="dns-prefetch" href="//cdn-images.doujindesu.fun/">
    <link rel="dns-prefetch" href="//cdnjs.cloudflare.com/">

    <script src="https://cdn.tailwindcss.com/3.4.17"></script>
    <style>
        /* Custom scrollbar untuk nuansa dark mode */
        body { background-color: #111827; color: #e5e7eb; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #1f2937; }
        ::-webkit-scrollbar-thumb { background: hsl(118, 92%, 48%); border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #0af06a; }
        
        /* Utility tambahan */
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        /* Mobile tap highlight fix */
        .tap-highlight-transparent { -webkit-tap-highlight-color: transparent; }
    </style>
</head>
