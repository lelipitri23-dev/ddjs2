<!DOCTYPE html>
<html lang="id">
<%- include('layout_head') %>

<% 
  // 1. Setup Variable & Safety Check
  const qParams = typeof queryParams !== 'undefined' ? queryParams : {}; 
  const currentMode = qParams.mode || 'image';
  
  // 2. Ambil Data Opsi Filter (Fallback jika tidak dikirim dari server)
  const listGenres = (typeof genreList !== 'undefined' && genreList.length > 0) ? genreList : [];
  const listStatuses = (typeof statusList !== 'undefined' && statusList.length > 0) ? statusList : ['Ongoing', 'Completed', 'Hiatus'];
  const listTypes = (typeof typeList !== 'undefined' && typeList.length > 0) ? typeList : ['Manga', 'Manhwa', 'Manhua', 'Doujinshi'];

  // 3. Helper untuk menandai genre yang sedang dipilih
  const selectedGenres = Array.isArray(qParams['genre[]']) ? qParams['genre[]'] : (qParams.genre ? [qParams.genre] : []);
%>

<body class="flex flex-col min-h-screen bg-gray-900 text-gray-200 font-sans">
    
    <%- include('navbar') %>

    <main class="flex-grow w-full px-2 md:px-6 py-8">        
        
        <div class="flex flex-col md:flex-row justify-between items-end gap-4 mb-6">
            
            <div class="w-full md:w-auto">
                <h1 class="text-3xl font-bold text-white border-l-4 border-blue-500 pl-4 leading-none mb-2">
                    <%= typeof title !== 'undefined' ? title : 'Daftar Komik' %>
                </h1>
                <p class="text-gray-400 text-sm pl-5">
                    Menampilkan Semua <span class="text-white font-bold"> Data Manga <%= typeof mangas !== 'undefined' ? mangas.length : 0 %></span>
                </p>
            </div>

            <div class="flex bg-[#151515] p-1 rounded-lg border border-gray-800 self-start md:self-end shadow-inner">
                <button onclick="changeMode('image')" 
                    class="flex items-center gap-2 px-4 py-1.5 rounded-md text-sm font-medium transition-all duration-300
                    <%= currentMode === 'image' ? 'bg-blue-600 text-white shadow-lg' : 'text-gray-500 hover:text-gray-300' %>">
                    <i class="fas fa-th-large"></i> 
                    <span class="hidden sm:inline">Gambar</span>
                </button>
                
                <button onclick="changeMode('text')" 
                    class="flex items-center gap-2 px-4 py-1.5 rounded-md text-sm font-medium transition-all duration-300
                    <%= currentMode === 'text' ? 'bg-blue-600 text-white shadow-lg' : 'text-gray-500 hover:text-gray-300' %>">
                    <i class="fas fa-list"></i> 
                    <span class="hidden sm:inline">List</span>
                </button>
            </div>
        </div>

        <div class="bg-[#rgb(59 130 246 / 0.5)] border border-gray-800 rounded-xl p-4 mb-8 shadow-xl relative z-30">
            <form action="/manga-list" method="GET" class="flex flex-wrap items-center gap-3" id="filterForm">
              
              <% if(qParams.q) { %> <input type="hidden" name="q" value="<%= qParams.q %>"> <% } %>
              <input type="hidden" name="mode" id="modeInput" value="<%= currentMode %>">
      
              <div class="relative group dropdown-container flex-grow md:flex-grow-0">
                <button type="button" class="dropdown-btn w-full md:w-auto bg-[#2A2A2A] hover:bg-[#333] text-gray-300 px-4 py-2.5 rounded-lg border border-[#333] hover:border-[rgb(59_130_246_/_0.5)] hover:text-blue-400 text-sm flex justify-between items-center gap-3 transition duration-300">
                  <span class="flex items-center gap-2"><i class="fas fa-tags text-gray-400 group-hover:text-blue-400 transition"></i> Genre</span> 
                  <i class="fas fa-chevron-down text-xs opacity-50"></i>
                </button>
              
                <div class="dropdown-content absolute top-full left-0 mt-2 bg-[#rgb(59 130 246 / 0.5)] border border-gray-700 p-4 rounded-xl w-72 md:w-96 shadow-2xl max-h-80 overflow-y-auto hidden z-50">
                  <div class="grid grid-cols-2 gap-2 text-xs">
                    <% listGenres.forEach(g => { %>
                      <div class="flex items-center gap-2 p-1 hover:bg-white/5 rounded">
                        <input type="checkbox" id="g-<%= g %>" name="genre[]" value="<%= g %>" class="filter-checkbox accent-blue-600" <%= selectedGenres.includes(g) ? 'checked' : '' %>>
                        <label for="g-<%= g %>" class="cursor-pointer text-gray-300 w-full select-none"><%= g %></label>
                      </div>
                    <% }) %>
                    <% if (listGenres.length === 0) { %> <p class="text-gray-500 italic col-span-2">Database Kosong</p> <% } %>
                  </div>
                </div>
              </div>
      
              <div class="relative group dropdown-container flex-grow md:flex-grow-0">
                <button type="button" class="dropdown-btn w-full md:w-auto bg-[#2A2A2A] hover:bg-[#333] text-gray-300 px-4 py-2.5 rounded-lg border border-[#333] hover:border-[rgb(59_130_246_/_0.5)] hover:text-blue-400 text-sm flex justify-between items-center gap-3 transition duration-300">
                   <span class="flex items-center gap-2"><i class="fas fa-info-circle text-gray-400 group-hover:text-blue-400 transition"></i> Status</span>
                   <i class="fas fa-chevron-down text-xs opacity-50"></i>
                </button>
             
                <div class="dropdown-content absolute top-full left-0 mt-2 bg-[#rgb(59 130 246 / 0.5)] border border-gray-700 p-2 rounded-xl w-44 shadow-2xl hidden z-50">
                  <div class="flex flex-col text-xs">
                    <label class="flex items-center gap-2 p-2 hover:bg-white/5 rounded cursor-pointer">
                      <input type="radio" name="status" value="all" class="accent-blue-600" <%= (!qParams.status || qParams.status == 'all') ? 'checked' : '' %>> All Status
                    </label>
                    <% listStatuses.forEach(status => { %>
                        <label class="flex items-center gap-2 p-2 hover:bg-white/5 rounded cursor-pointer">
                           <input type="radio" name="status" value="<%= status %>" class="accent-blue-600" <%= qParams.status == status ? 'checked' : '' %>> <%= status %>
                        </label>
                    <% }) %>
                  </div>
                </div>
              </div>
      
              <div class="relative group dropdown-container flex-grow md:flex-grow-0">
                <button type="button" class="dropdown-btn w-full md:w-auto bg-[#2A2A2A] hover:bg-[#333] text-gray-300 px-4 py-2.5 rounded-lg border border-[#333] hover:border-[rgb(59_130_246_/_0.5)] hover:text-blue-400 text-sm flex justify-between items-center gap-3 transition duration-300">
                  <span class="flex items-center gap-2"><i class="fas fa-book text-gray-400 group-hover:text-blue-400 transition"></i> Type</span>
                  <i class="fas fa-chevron-down text-xs opacity-50"></i>
                </button>
                <div class="dropdown-content absolute top-full left-0 mt-2 bg-[#rgb(59 130 246 / 0.5)] border border-gray-700 p-2 rounded-xl w-44 shadow-2xl hidden z-50">
                  <div class="flex flex-col text-xs">
                    <label class="flex items-center gap-2 p-2 hover:bg-white/5 rounded cursor-pointer">
                      <input type="radio" name="type" value="all" class="accent-blue-600" <%= (!qParams.type || qParams.type == 'all') ? 'checked' : '' %>> All Types
                    </label>
                    <% listTypes.forEach(type => { %>
                        <label class="flex items-center gap-2 p-2 hover:bg-white/5 rounded cursor-pointer">
                           <input type="radio" name="type" value="<%= type %>" class="accent-blue-600" <%= qParams.type == type ? 'checked' : '' %>> <%= type %>
                        </label>
                    <% }) %>
                  </div>
                </div>
              </div>
      
              <div class="relative group dropdown-container flex-grow md:flex-grow-0">
                <button type="button" class="dropdown-btn w-full md:w-auto bg-[#2A2A2A] hover:bg-[#333] text-gray-300 px-4 py-2.5 rounded-lg border border-[#333] hover:border-[rgb(59_130_246_/_0.5)] hover:text-blue-400 text-sm flex justify-between items-center gap-3 transition duration-300">
                  <span class="flex items-center gap-2"><i class="fas fa-sort text-gray-400 group-hover:text-blue-400 transition"></i> Sort</span>
                  <i class="fas fa-chevron-down text-xs opacity-50"></i>
                </button>
                <div class="dropdown-content absolute top-full left-0 mt-2 bg-[#rgb(59 130 246 / 0.5)] border border-gray-700 p-2 rounded-xl w-44 shadow-2xl hidden z-50">
                  <div class="flex flex-col text-xs">
                    <label class="flex items-center gap-2 p-2 hover:bg-white/5 rounded cursor-pointer">
                      <input type="radio" name="orderby" value="update" class="accent-blue-600" <%= (!qParams.orderby || qParams.orderby == 'update') ? 'checked' : '' %>> Latest Update
                    </label>
                    <label class="flex items-center gap-2 p-2 hover:bg-white/5 rounded cursor-pointer">
                      <input type="radio" name="orderby" value="popular" class="accent-blue-600" <%= qParams.orderby == 'popular' ? 'checked' : '' %>> Most Popular
                    </label>
                    <label class="flex items-center gap-2 p-2 hover:bg-white/5 rounded cursor-pointer">
                      <input type="radio" name="orderby" value="titleasc" class="accent-blue-600" <%= qParams.orderby == 'titleasc' ? 'checked' : '' %>> A-Z
                    </label>
                    <label class="flex items-center gap-2 p-2 hover:bg-white/5 rounded cursor-pointer">
                      <input type="radio" name="orderby" value="titledesc" class="accent-blue-600" <%= qParams.orderby == 'titledesc' ? 'checked' : '' %>> Z-A
                    </label>
                  </div>
                </div>
              </div>
      
              <div class="flex-grow flex items-center gap-2 ml-auto">
                  <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-lg text-sm font-bold shadow-[0_0_15px_rgb(59_130_246_/_0.5)] transition w-full md:w-auto flex items-center justify-center gap-2 hover:shadow-[0_0_20px_rgb(59_130_246_/_0.7)]">
                    <i class="fas fa-filter"></i> Terapkan
                  </button>
                  
                  <% if (Object.keys(qParams).length > 0 && (qParams.status || qParams.type || qParams.genre || qParams.q)) { %>
                    <a href="/manga-list" class="bg-gray-700 hover:bg-red-600 text-white px-3 py-2.5 rounded-lg transition" title="Reset Filter">
                        <i class="fas fa-times"></i>
                    </a>
                  <% } %>
              </div>

            </form>
        </div>

        <% if (mangas && mangas.length > 0) { %>
            
            <% if (currentMode === 'image') { %>
                
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-4 xl:grid-cols-6 gap-2 md:gap-6">
                    <% mangas.forEach(manga => { %>
                    <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg border border-gray-800 hover:border-blue-500/50 hover:shadow-blue-500/10 transition duration-300 group">
                        <a href="/manga/<%= manga.slug %>" class="block h-full">
                                <div class="h-56 md:h-64 bg-gray-700 relative overflow-hidden">
                                    <% if (manga.thumb) { %>
                                        <img src="<%= manga.thumb %>" alt="<%= manga.title %>" class="w-full h-full object-cover group-hover:scale-105 transition duration-500" loading="lazy">
                                    <% } else { %>
                                        <div class="w-full h-full flex items-center justify-center text-3xl">üìö</div>
                                    <% } %>

                                    <div class="absolute top-2 left-2">
                                        <span class="text-[10px] font-bold px-2 py-0.5 rounded shadow-sm text-white
                                            <%= (manga.metadata.type && manga.metadata.type.type === 'Doujinshi') ? 'bg-red-600' : 'bg-blue-600' %>">
                                            <%= manga.metadata.type ? (typeof manga.metadata.type === 'object' ? manga.metadata.type.type : manga.metadata.type) : 'Manga' %>
                                        </span>
                                    </div>

                                    <div class="absolute bottom-0 w-full bg-gradient-to-t from-black via-black/70 to-transparent p-2 pt-6">
                                        <span class="text-yellow-400 text-xs font-bold flex items-center gap-1">
                                            ‚≠ê <%= manga.metadata.rating %>
                                        </span>
                                    </div>
                                </div>

                                <div class="p-3">
                                    <h3 class="text-xs md:text-sm font-bold text-white line-clamp-2 mb-2 group-hover:text-blue-400 transition" title="<%= manga.title %>">
                                        <%= manga.title %>
                                    </h3>
                                    <div class="flex justify-between items-center border-t border-gray-700 pt-2">
                                        <span class="text-[10px] text-gray-400"><%= manga.metadata.status %></span>
                                        <span class="text-[10px] text-blue-300">Detail &rarr;</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                </div>

            <% } else { %>

                <div class="flex flex-col gap-3">
                    <% mangas.forEach(manga => { %>
                        <a href="/manga/<%= manga.slug %>" class="relative flex items-center gap-3 md:gap-4 bg-[#rgb(59 130 246 / 0.5)] hover:bg-[#rgb(59 130 246 / 0.5)] p-2 md:p-3 rounded-lg border border-gray-800 hover:border-blue-500/50 transition-all duration-300 group overflow-hidden shadow-sm">
                            
                            <div class="w-12 h-16 md:w-14 md:h-20 flex-shrink-0 rounded overflow-hidden bg-gray-800 relative shadow-md">
                                <% if (manga.thumb) { %>
                                    <img src="<%= manga.thumb %>" alt="<%= manga.title %>" class="w-full h-full object-cover transform group-hover:scale-110 transition duration-500" loading="lazy">
                                <% } else { %>
                                    <div class="w-full h-full flex items-center justify-center text-xs text-gray-600 bg-gray-900">No img</div>
                                <% } %>
                            </div>

                            <div class="flex-1 min-w-0 flex flex-col justify-center">
                                <div class="flex items-center gap-2 mb-1">
                                    <span class="text-[9px] md:text-[10px] font-bold px-1.5 py-0.5 rounded text-white tracking-wide uppercase
                                        <%= (manga.metadata.type && manga.metadata.type.type === 'Doujinshi') ? 'bg-red-600' : 'bg-blue-600' %>">
                                        <%= manga.metadata.type ? (typeof manga.metadata.type === 'object' ? manga.metadata.type.type : manga.metadata.type) : 'Manga' %>
                                    </span>
                                     
                                    <span class="text-[10px] flex items-center gap-1 <%= manga.metadata.status === 'Ongoing' ? 'text-green-400' : 'text-blue-300' %>">
                                        <i class="fas fa-circle text-[6px]"></i> 
                                        <%= manga.metadata.status %>
                                    </span>
                                </div>

                                <h3 class="text-sm md:text-base font-bold text-gray-200 group-hover:text-blue-400 transition truncate pr-2 leading-tight">
                                    <%= manga.title %>
                                </h3>

                                <p class="text-[10px] text-gray-500 mt-1">
                                    Updated: <%= manga.updatedAt ? new Date(manga.updatedAt).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) : '-' %>
                                </p>
                            </div>

                            <div class="flex flex-col items-end gap-2 border-l border-gray-700 pl-3 md:pl-4 py-1 h-full justify-center min-w-[70px]">
                                <div class="flex items-center gap-1 text-yellow-500 text-xs font-bold">
                                    <i class="fas fa-star text-[10px]"></i> <%= manga.metadata.rating %>
                                </div>
                                <div class="bg-gray-800 border border-gray-700 text-gray-300 text-[10px] md:text-xs px-2 py-0.5 rounded font-mono group-hover:border-blue-500/50 transition">
                                    Ch. <%= manga.chapter_count || 0 %>
                                </div>
                            </div>

                        </a>
                    <% }) %>
                </div>

            <% } %>

            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="flex flex-wrap justify-center items-center gap-2 mt-12 mb-8">
                    <% 
                        function getPageUrl(p) {
                            let url = '/manga-list?page=' + p;
                            if(qParams.q) url += '&q=' + qParams.q;
                            if(qParams.mode) url += '&mode=' + qParams.mode;
                            if(qParams.genre) {
                                if(Array.isArray(qParams.genre)) qParams.genre.forEach(g => url += '&genre[]=' + g);
                                else url += '&genre[]=' + qParams.genre;
                            }
                            if(qParams.status) url += '&status=' + qParams.status;
                            if(qParams.type) url += '&type=' + qParams.type;
                            if(qParams.orderby) url += '&orderby=' + qParams.orderby;
                            return url;
                        }
                    %>

                    <% if (currentPage > 1) { %>
                        <a href="<%= getPageUrl(currentPage - 1) %>" class="bg-gray-800 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition border border-gray-700 text-sm">
                            &laquo; Prev
                        </a>
                    <% } %>

                    <div class="bg-gray-800 px-4 py-2 rounded-lg border border-gray-700 text-sm">
                        Halaman <span class="text-blue-400 font-bold"><%= currentPage %></span> dari <%= totalPages %>
                    </div>

                    <% if (currentPage < totalPages) { %>
                        <a href="<%= getPageUrl(currentPage + 1) %>" class="bg-gray-800 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition border border-gray-700 text-sm">
                            Next &raquo;
                        </a>
                    <% } %>
                </div>
            <% } %>

        <% } else { %>
            <div class="text-center py-32 bg-gray-800 rounded-xl border border-dashed border-gray-700">
                <div class="text-6xl mb-4">üì≠</div>
                <h3 class="text-xl font-bold text-white">Belum Ada Komik</h3>
                <p class="text-gray-400 mt-2">Database masih kosong atau filter tidak menemukan hasil.</p>
            </div>
        <% } %>

    </main>

    <%- include('footer') %>

    <script>
        // Logic: Buka/Tutup Dropdown
        document.querySelectorAll('.dropdown-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.stopPropagation();
                const content = btn.nextElementSibling;
                // Tutup dropdown lain
                document.querySelectorAll('.dropdown-content').forEach(d => {
                    if (d !== content) d.classList.add('hidden');
                });
                content.classList.toggle('hidden');
            });
        });

        // Logic: Tutup Dropdown saat klik di luar
        window.addEventListener('click', () => {
            document.querySelectorAll('.dropdown-content').forEach(content => {
                content.classList.add('hidden');
            });
        });

        // Mencegah dropdown tertutup saat klik di dalam area dropdown itu sendiri
        document.querySelectorAll('.dropdown-content').forEach(content => {
            content.addEventListener('click', (e) => {
                e.stopPropagation();
            });
        });

        // Logic: Ganti Mode (Submit Form)
        function changeMode(mode) {
            const input = document.getElementById('modeInput');
            const form = document.getElementById('filterForm');
            if (input && form) {
                input.value = mode;
                form.submit();
            }
        }
    </script>
